<Window x:Class="ATBM_Project.Views.General.UpdateUnit_Dialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ATBM_Project.Views.General"
        mc:Ignorable="d"
        Title="Insert Unit" Height="300" Width="450">
    <StackPanel Orientation="Vertical" Margin="20">
        <TextBlock FontSize="20" Text="Cập nhật thông tin đơn vị" HorizontalAlignment="Center"/>

        <StackPanel Orientation="Horizontal" Margin="0 20 20 10">
            <TextBlock Text="Mã đơn vị: " Width="100"/>
            <TextBox x:Name="inputUnitID" Width="200" IsEnabled="False"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0 0 20 10">
            <TextBlock Text="Tên đơn vị:" Width="100"/>
            <TextBox x:Name="inputUnitName" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal"  Margin="0 0 20 10">
            <TextBlock Text="Trưởng đơn vị:" Width="100"/>
            <TextBox x:Name="inputHeadUnit" Width="200"/>
        </StackPanel>
        <Button x:Name="btnUpdate" Click="btnUpdate_Click" Width="80" >Cập nhật</Button>


    </StackPanel>
</Window>
